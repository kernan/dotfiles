[include]
	# local/private config
	path = ~/.config/git/secure

[user]
	name = Robert Kernan

[core]
	editor = $EDITOR

[color]
	branch = auto
	diff = auto
	status = auto
	showbranch = auto
	ui = auto

[color "status"]
	added = green
	changed = yellow
	untracked = red

[status]
	showUntrackedFiles = all

[push]
	default = simple

[branch]
	autosetuprebase = always

[merge]
	tool = nvim.fugitive

[mergetool "nvim.fugitive"]
	cmd = nvim -f -c \"Gdiff\" \"$MERGED\"

[rerere]
	enabled = 1

[alias]
	# stage
	a = add
	aa = add --all
	ap = add --patch
	# checkout
	co = checkout
	cob = checkout -b
	# commit
	ci = commit
	# amend previous commit
	amend = commit --amend
	# undo previous commit
	undo = reset HEAD~1 --mixed
	# one-line log
	lg = log --graph --oneline --decorate
	# short status
	stat = status --short
