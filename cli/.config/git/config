[include]
	# local/private config
	path = ~/.config/git/secure

[user]
	name = Robert Kernan

[core]
	editor = $EDITOR

[color]
	branch = auto
	diff = auto
	status = auto
	showbranch = auto
	ui = auto

[color "status"]
	added = green
	changed = yellow
	untracked = red

[status]
	showUntrackedFiles = all

[push]
	default = simple

[branch]
	autosetuprebase = always

[merge]
	tool = nvim.fugitive

[mergetool "nvim.fugitive"]
	cmd = nvim -f -c \"Gdiff\" \"$MERGED\"

[rerere]
	enabled = 1

[alias]
	# stage
	a = add
	aa = add --all
	ap = add --patch
	# checkout
	co = checkout
	cob = checkout -b
	# commit
	ci = commit
	# update local
	up = !git pull --rebase --prune $@ && git submodule update --init --recursive
	# stash
	save = stash save --include-untracked
	pop = stash pop
	# fix local
	undo = reset HEAD~1 --mixed
	amend = commit --amend
	wipe = !git stash save --include-untracked && git reset HEAD --hard
	# remove merged branches
	rmb = "!f() { git branch --merged ${1-master} | grep -v " ${1-master}$" | xargs git branch -d; }; f"
	# one-line log
	lg = log --graph --oneline --decorate
	# short status
	stat = status --short
