[alias]
	a = add
	ai = add --interactive
	aa = add --all
	ap = add --patch
	amend = commit --amend
	ci = commit
	st = status --short --branch
	grog = log --graph --abbrev-commit --decorate --date=short --all --pretty=format:"%C(blue)%h\\ %C(cyan)%ad\\ %C(white)%an\\ %C(green)(%ar)%C(yellow)%C(white)%+s%C(reset)"
