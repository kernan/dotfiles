function! MkdirIfNone(dir)
	if !isdirectory(a:dir)
		if exists('*mkdir')
			call mkdir(a:dir, 'p')
			echo 'created directory: ' . a:dir
		else
			echo 'cannot make directory: ' . a:dir
		endif
	endif
endfunction

call MkdirIfNone(expand('~/.vim/undo'))

