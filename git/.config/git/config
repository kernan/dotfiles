# local/private config
[include]
	path = ~/.config/git/config.sec

[user]
	name = Robert Kernan

[core]
	editor = $EDITOR
	excludesfile = ~/.gitignore

[alias]
	a = add
	ai = add --interactive
	aa = add --all
	ap = add --patch
	amend = commit --amend
	ci = commit
	co = checkout
	lg = log --graph --abbrev-commit --decorate --date=relative --all
	uncommit = reset --soft HEAD~
	unstage = reset HEAD --

[diff]
	tool = vimdiff

[difftool]
	prompt = false

[difftool "vimdiff"]
	cmd = $EDITOR -d $LOCAL $REMOTE

[merge]
	tool = vimdiff
	conflictstyle = diff3

[mergetool]
	prompt = true

[mergetool "vimdiff"]
	cmd = $EDITOR -d $BASE $LOCAL $REMOTE $MERGED

[pull]
	rebase = true

[push]
	default = simple

[rebase]
	autosquash = true
