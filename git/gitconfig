; vim:set filetype=gitconfig:
[user]
	name = Robert Kernan
	email = rkernan@gmail.com
[color]
	ui = auto
[alias]
	stat = status -s
[core]
	excludesfile = ~/.gitignore
	editor = vim
[branch]
	autosetuprebase = always
[pull]
	rebase = true
[push]
	default = upstream
[diff]
	tool = vimdiff
	; tool = gvimdiff
[difftool]
	prompt = false
[merge]
	tool = fugitive
[mergetool "fugitive"]
	cmd = vim -f -c \"Gdiff\" \"$MERGED\"
	; cmd = gvim -f -c \"Gdiff\" \"$MERGED\"
