# local/private config
[include]
	path = ~/.gitconfig.sec

[user]
	name = Robert Kernan

[core]
	editor = $EDITOR
	excludesfile = ~/.gitignore

[color]
	ui = auto

[color "status"]
	added = green
	changed = yellow
	untracked = red

[alias]
	a = add
	ai = add --interactive
	aa = add --all
	ap = add --patch
	amend = commit --amend
	ci = commit
	co = checkout
	lg = log --graph --abbrev-commit --decorate --format=format:'%C(bold blue)%h%C(reset) - %C(bold green)(%ar)%C(reset) %s - %C(dim white)%an%C(reset)'
	stat = status -s
	uncommit = reset --soft HEAD~
	unstage = reset HEAD --

[diff]
	tool = vimdiff

[difftool]
	prompt = false

[difftool "vimdiff"]
	cmd = $EDITOR -d $LOCAL $REMOTE

[merge]
	tool = vimdiff
	conflictstyle = diff3

[mergetool]
	prompt = true

[mergetool "vimdiff"]
	cmd = $EDITOR -d $BASE $LOCAL $REMOTE $MERGED

[pull]
	rebase = true

[push]
	default = simple

[rebase]
	autosquash = true
